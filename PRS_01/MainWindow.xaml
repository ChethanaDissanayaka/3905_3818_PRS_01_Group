<Window x:Class="PRS_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRS_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="825" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize">
    <Window.DataContext>
        <local:DataContext/>    
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="CornflowerBlue" Offset="1"/>
                <!--<GradientStop Color="#FFE63070" Offset="1"/>-->
                <!--<GradientStop Color="#FFFE8704" Offset="0"/>-->
            </LinearGradientBrush>
        </Grid.Background>
        
        <Border CornerRadius="100 100 100 100"
                Background="#100E17" Margin="40,40,40,40">
            <StackPanel Width="750"   VerticalAlignment="Top">
                <Label Content="Patient   Registration   System" FontSize="40" Foreground="Pink"
                            HorizontalAlignment="Center" Margin="20" FontWeight="Bold"/>
             
                <StackPanel Orientation="Vertical" Width="350" HorizontalAlignment="Left" Height="500">
                    <Image Source="Images/1.png" Width="250" Height="350"
                           VerticalAlignment="Top" Margin="50 20 50 50" Stretch="Fill"/>
                    
                </StackPanel>
                <StackPanel Width="400" Orientation="Vertical" HorizontalAlignment="Right" Margin="20 -530">
                    <StackPanel Margin="20,20" >
                        <Label Content="Login" Margin="10" Foreground="White" FontWeight="Bold" 
                                   HorizontalAlignment="Center" FontSize="30"/>

                        <TextBlock Text="User Name :" Margin="5" FontSize="20" Foreground="White" Height="30"/>
                        <TextBox x:Name="UsernameTextBox" Margin="5" Text="{Binding Username, Mode=TwoWay}"  Height="30"/>

                        <TextBlock Text="Password   :" Margin="5" FontSize="20" Foreground="White" Height="30"/>
                        <TextBox x:Name="PasswordBox" Height="30" Margin="5"
                                 Text ="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        
                        <TextBlock Text="User Type :" Margin="0 5" FontSize="20" Foreground="White" Height="30"/>
                        <ComboBox x:Name="UsertypeBox" Margin="5" Height="30" FontSize="20" 
                                  ItemsSource="{Binding names}" Text="" />

                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Button Content="Login" Width="280" Margin="20" Padding="10"
                                    Click="Button_Click" Style="{StaticResource mainbutton}" />
                        </StackPanel>


                    </StackPanel>


                </StackPanel>

            </StackPanel>
            
            
